{
  "manifest_version": 3,
  "name": "HotTea",
  "version": "5.10",
  "description": "Transform boring news into engaging friend group conversations with AI-powered storytelling",
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "開啟 HotTea 側邊欄"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/HotTeaLogo.png",
    "48": "icons/HotTeaLogo.png",
    "128": "icons/HotTeaLogo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
